<!DOCTYPE html>
<html>
	<head>
		<title>Passport-Twitter Example</title>
		<link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
	</head>
	<body>
		<% if (!user) { %>
			<p>
			<a href="/">Home</a> | 
			<a href="/login">Log In</a>
			</p>
		<% } else { %>
			<p>
			<a href="/">Home</a> | 
			<a href="/account">Account</a> | 
			<a href="/logout">Log Out</a>
			</p>
		<% } %>
		<%- body %>
		<script src="js/require.js"></script>
		<script>
		require.config({
			baseUrl: 'js',
			paths: {
				'jquery': 'jquery-1.8.3.min'
			},
			shim: {
				'bootstrap': {
					deps: ['jquery']
				},
				'backbone': {
					deps: ['underscore', 'json2', 'jquery'],
					exports: 'Backbone'
				},
				'handlebars': {
					exports: 'Handlebars'
				}
			}
		});
		</script>
		<%- scripts %>
	</body>
</html>
